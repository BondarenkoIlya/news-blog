<!DOCTYPE form-validation PUBLIC
        "-//Apache Software Foundation
       //DTD Commons Validator Rules Configuration 1.3.0//EN"
        "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">

<form-validation>
    <formset>
        <form name="newsForm">
            <field property="news.title" depends="required">
                <msg name="required" key="err.news.title.required"/>
            </field>
            <field property="newComment.author" depends="required">
                <msg name="required" key="err.comment.author.required"/>
            </field>
        </form>
    </formset>
</form-validation>
