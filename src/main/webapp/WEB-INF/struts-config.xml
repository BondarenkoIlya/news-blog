<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
        <form-bean name="newsListForm"
                   type="com.epam.ilya.form.NewsListForm"/>
        <form-bean name="newsForm"
                   type="com.epam.ilya.form.NewsForm"/>
    </form-beans>

    <action-mappings>
        <action path="/newsList"
                type="com.epam.ilya.action.ShowNewsListPageAction"
                name="newsListForm"
                scope="request">
            <forward name="success" path="/WEB-INF/jsp/news-list.jsp"/>
        </action>
        <action path="/newsView"
                type="com.epam.ilya.action.ShowNewsViewPageAction"
                name="newsForm"
                scope="request">
            <forward name="success" path="/WEB-INF/jsp/news-view.jsp"/>
        </action>
        <action path="/newsEdit"
                type="com.epam.ilya.action.ShowNewsEditionPageAction"
                name="newsForm"
                scope="request">
            <forward name="success" path="/WEB-INF/jsp/news-edit.jsp"/>
        </action>
        <action path="/newsNew"
                type="org.apache.struts.actions.ForwardAction"
                name="newsForm"
                scope="request"
                parameter="/WEB-INF/jsp/news-edit.jsp"
                validate="false">
        </action>
        <action path="/newsEdition"
                type="com.epam.ilya.action.EditNewsAction"
                name="newsForm"
                parameter="method"
                scope="request">
            <forward name="success" path="/newsView.do" redirect="true"/>
        </action>
    </action-mappings>

</struts-config>